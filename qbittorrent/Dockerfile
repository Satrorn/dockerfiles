FROM nevinee/qbittorrent
LABEL maintainer="Satrorn <satrorn@gmail.com>"

ENV VERSION 0.1.3

# ***** 安装依赖 *****
RUN apk add --no-cache bash git py3-pip py3-tinydb

WORKDIR /data

# 安装汉化文件
RUN wget --no-check-certificate -P /data https://github.com/CzBiX/qb-web/releases/tag/nightly-20221007.tar.gz -O /data/nightly-20221007.tar.gz
RUN tar xzf nightly-20221007.tar.gz
RUN rm -rf nightly-20221007.tar.gz
RUN git clone https://github.com/spartazhc/qb_dispatch.git /data/qb_dispatch

# ***** 复制文件 *****
COPY diy.sh /data/diy/diy.sh
COPY . /data

RUN pip3 install -r /data/qb_dispatch/requirement.txt

VOLUME ["/data"]
ENTRYPOINT ["/init"]
